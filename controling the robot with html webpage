// Ø³ÙŠØ±ÙÙˆ
#define SERVO_PIN 32
Servo myServo;
int servoPos = 90; // Ø§Ù„Ø¨Ø¯Ø§ÙŠØ© ÙÙŠ Ø§Ù„Ù…Ù†ØªØµÙ

